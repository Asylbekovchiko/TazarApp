<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/img_circle_statistic"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:background="@drawable/aaa"
        android:padding="14dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_title_statistic"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title_statistic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/sfprodisplay_regular"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/img_circle_statistic"
        tools:text="Бумага" />

    <TextView
        android:id="@+id/tv_weight_statistic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sfprodisplay_bold"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="400кг" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_line_F2F1F4"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/rounded_shape_white_12dp_ffffff">

    <TextView
        android:id="@+id/history_item_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/color_silver_A5A9AF"
        android:textFontWeight="750"
        android:fontFamily="@font/sfprodisplay_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/history_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/color_dark_161C25"
        android:textFontWeight="750"
        android:fontFamily="@font/sfprodisplay_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/history_item_datetime"
        app:layout_constraintStart_toStartOf="@+id/history_item_datetime"
        app:layout_constraintTop_toBottomOf="@+id/history_item_datetime"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/history_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_gray_7B818C"
        app:layout_constraintTop_toBottomOf="@+id/history_item_title"
        tools:layout_editor_absoluteX="20dp" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/history_item_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        zhy:max_select="-1"
        app:layout_constraintTop_toBottomOf="@+id/history_item_address"/>

</androidx.constraintlayout.widget.ConstraintLayout>
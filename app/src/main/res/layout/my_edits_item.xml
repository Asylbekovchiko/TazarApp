<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:background="@drawable/rounded_shape_white_12dp_ffffff"
    android:elevation="3dp">

    <TextView
        android:id="@+id/my_edits_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/sfprodisplay_bold"
        android:textColor="@color/colorAccent_8CC341"
        android:textFontWeight="750"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/my_edits_item_firm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sfprodisplay_bold"
        android:textColor="@android:color/black"
        android:textFontWeight="750"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/my_edits_item_status"
        app:layout_constraintTop_toBottomOf="@+id/my_edits_item_status"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/my_edits_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sfprodisplay_regular"
        android:textColor="@color/color_silver_8492A4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_edits_item_firm_name" />

    <ImageView
        android:id="@+id/my_edits_item_three_commas"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_simple_silver_menu_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/my_edits_item_flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_edits_item_address"
        zhy:max_select="-1" />

    <TextView
        android:id="@+id/my_edits_item_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/color_line_F2F1F4"
        app:layout_constraintTop_toBottomOf="@+id/my_edits_item_flowlayout" />

    <TextView
        android:id="@+id/my_edits_item_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_margin"
        android:text="@string/take"
        android:fontFamily="@font/sfprodisplay_bold"
        android:textColor="@color/color_silver_E9EBED"
        android:textFontWeight="800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/my_edits_item_flowlayout"
        app:layout_constraintTop_toBottomOf="@+id/my_edits_item_view_line"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/my_edits_item_take_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorAccent_8CC341"
        android:textFontWeight="800"
        app:layout_constraintBottom_toBottomOf="@+id/my_edits_item_take"
        app:layout_constraintStart_toEndOf="@+id/my_edits_item_take"
        app:layout_constraintTop_toTopOf="@+id/my_edits_item_take"
        tools:ignore="UnusedAttribute" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:background="@drawable/rounded_shape_white_12dp_ffffff"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/point_history_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point_history_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textFontWeight="750"
        app:layout_constraintBottom_toBottomOf="@+id/point_history_icon"
        app:layout_constraintStart_toEndOf="@+id/point_history_icon"
        app:layout_constraintTop_toTopOf="@+id/point_history_icon"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/point_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/date"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/point_history_icon"
        app:layout_constraintTop_toBottomOf="@+id/point_history_icon" />

    <TextView
        android:id="@+id/point_history_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/point_history_date"
        app:layout_constraintStart_toEndOf="@+id/point_history_date"
        app:layout_constraintTop_toTopOf="@+id/point_history_date"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/point_history_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/point"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/point_history_icon"
        app:layout_constraintTop_toBottomOf="@+id/point_history_date" />

    <TextView
        android:id="@+id/point_history_point_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/point_history_point"
        app:layout_constraintStart_toEndOf="@+id/point_history_point"
        app:layout_constraintTop_toTopOf="@+id/point_history_point"
        tools:ignore="UnusedAttribute" />


    <TextView
        android:id="@+id/point_history_collector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/collector"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/point_history_icon"
        app:layout_constraintTop_toBottomOf="@+id/point_history_point" />

    <TextView
        android:id="@+id/point_history_collector_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/point_history_collector"
        app:layout_constraintStart_toEndOf="@+id/point_history_collector"
        app:layout_constraintTop_toTopOf="@+id/point_history_collector"
        tools:ignore="UnusedAttribute" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/point_history_flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_history_collector_value"
        zhy:max_select="-1" />

</androidx.constraintlayout.widget.ConstraintLayout>
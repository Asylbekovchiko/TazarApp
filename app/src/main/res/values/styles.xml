<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent_8CC341</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sfprodisplay_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView.Active">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="fontFamily">@font/sfprodisplay_medium</item>
        <item name="android:fontFamily">@font/sfprodisplay_medium</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/sfprodisplay_medium</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent_8CC341</item>
    </style>

    <style name="ThemeEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_white_FFFFFF</item>
        <item name="colorPrimaryDark">@color/color_white_FFFFFF</item>
        <item name="colorAccent">@color/color_white_FFFFFF</item>
    </style>

    <!--    <style name="Progress_bar_custom">-->
    <!--        <item name=""-->
    <!--    </style>-->

    <style name="NumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/color_dark_161C25</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/color_gray_7B818C
        </item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_silver_A5A9AF</item>
        <!--        <item name="android:activatedBackgroundIndicator">@drawable/rounded_shape_green_12dp_8cc341</item>-->
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_layout</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textProfileItems">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/sfprodisplay_medium</item>
    </style>

    <style name="textProfileScore">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/sfprodisplay_bold</item>
    </style>

</resources>
